    <rules>
        <fullName>Notify ADC Owner when status is Call Back</fullName>
        <actions>
            <name>Notify_ADC_Case_Onwer_that_Case_Status_is_Call_Back</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <description>Notify Case Owner when case status is Call Back.</description>
        <formula>AND( OR( RecordType.Name = &quot;General Case&quot;, RecordType.Name = &quot;Email and Web&quot; ), OwnerId &lt;&gt; $User.Id,   NOT(ISPICKVAL(Status, &quot;Closed&quot;)),  ISPICKVAL( Status, &#39;Callback&#39;)   )</formula>
