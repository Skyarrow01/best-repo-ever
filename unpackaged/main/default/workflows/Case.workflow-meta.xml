    </rules>
    <rules>
        <fullName>Notify Launch Team Case Status is not actively being worked</fullName>
        <active>true</active>
        <description>Notify Launch Team Members that Case is not being worked</description>
        <formula>AND(RecordType.DeveloperName = &#39;Product_Launch_Testing&#39;, NOT(ISPICKVAL(Status,&#39;Ready to Launch&#39;)),  NOT(ISPICKVAL(Status,&#39;Ready for CSI&#39;)), NOT(ISPICKVAL(Status,&#39;Duplicate&#39;)))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
