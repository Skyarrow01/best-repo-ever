        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Populate Last Modified Date for Flow on BE Case update</fullName>
        <actions>
            <name>Populate_Last_Modified_Date_for_Flow</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>This workflow populate Last Modified Date for Flow on BE Case update if Case Owner is not the current user and is Backline Escalation Case.</description>
        <formula>AND(      CONTAINS(RecordType.Name ,&quot;Backline&quot;),      ISCHANGED(LastModifiedDate),      OwnerId&lt;&gt;$User.Id,   NOT(ISPICKVAL(Status,&quot;Submit&quot;)),   NOT(ISPICKVAL(Status,&quot;Submitted&quot;)) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Populate Product Search</fullName>
