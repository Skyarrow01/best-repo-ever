    <rules>
        <fullName>Assign Web case to Email and Web Queue</fullName>
        <actions>
            <name>Change_Owner_to_Email_and_Web_Queue</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.Origin</field>
            <operation>equals</operation>
            <value>Web</value>
        </criteriaItems>
        <description>Assigns Web to Case to Email and Web Queue</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>CCM Notify ADC Owner Case is Assigned</fullName>
        <actions>
            <name>CCM_Notify_ADC_Owner_Case_is_Assigned</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Notify Case Owner when it is assigned and case is not closed Status. Excludes Queues and Phone Cases.</description>
        <formula>AND(  NOT(CONTAINS( RecordType.Name, &quot;Backline&quot;)),  RecordType.DeveloperName  &lt;&gt; &quot;Chat&quot;, RecordType.DeveloperName  &lt;&gt; &quot;Product_Launch_Testing&quot;,   RecordType.DeveloperName  &lt;&gt; &quot;Orders&quot;, RecordType.DeveloperName  &lt;&gt; &quot;Orders_Inquiries&quot;, RecordType.DeveloperName  &lt;&gt; &quot;Quote&quot;, RecordType.DeveloperName &lt;&gt; &quot;SalesTax&quot;, RecordType.DeveloperName &lt;&gt; &quot;Credit_New_Account&quot;, RecordType.DeveloperName &lt;&gt; &quot;AR&quot;,  RecordType.DeveloperName &lt;&gt; &quot;RA&quot;,ISCHANGED(OwnerId),   OwnerId &lt;&gt; $User.Id,   Owned_by_Queue__c = FALSE,   NOT(ISPICKVAL(Status, &quot;Closed&quot;)),   NOT(ISPICKVAL(Origin,&quot;Phone&quot;)) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
